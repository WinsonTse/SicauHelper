<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="colorPrimary">@color/light_blue_500</item>
        <!--<item name="colorPrimaryDark">@color/light_blue_700</item>-->
        <item name="colorAccent">@color/grey_500</item>
        
        <!--<item name="windowContentOverlay">@android:color/transparent</item>-->
        <item name="windowActionBarOverlay">true</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="setting_item_style">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_white_lightgrey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="help_q_tv">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="help_a_tv">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="course_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="course_name">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="course_content">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
