<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="28sp"
            android:textColor="@color/light_blue_500"
            android:text="川农校园通"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14sp"
            android:textColor="@color/light_blue_500"
            android:layout_marginTop="8dp"
            android:text="课表!成绩!新闻!空教室!市场!论坛!通通都有!"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>


        <EditText
            android:hint="学号"
            android:maxLength="15"
            android:inputType="number"
            android:id="@+id/login_sid_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:maxLength="30"
            android:hint="密码"
            android:id="@+id/login_pswd_et"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="登录"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_lightblue_blue"
            android:id="@+id/login_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login_help_tv"
        android:clickable="true"
        android:layout_weight="8"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:textColor="@color/lightblue_blue"
        android:text="川农助手"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
