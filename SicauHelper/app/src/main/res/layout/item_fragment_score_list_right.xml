<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_marginLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/msg_bubble_right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="西方经济学"

                android:layout_alignTop="@+id/score_tv"
                android:layout_toRightOf="@+id/score_tv"
                android:layout_toEndOf="@+id/score_tv" />
            <TextView
                android:id="@+id/grade_tv"
                android:text="2011年-上学年"
                android:gravity="center|left"
                android:textColor="#aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    style="@android:style/Widget.Holo.RatingBar.Small"
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="西方经济学"
                    android:layout_alignTop="@+id/score_tv"
                    android:layout_toRightOf="@+id/score_tv"
                    android:layout_toEndOf="@+id/score_tv" />

                <TextView
                    android:id="@+id/credit_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5学分" />
            </LinearLayout>



        </LinearLayout>

        <TextView
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#必 修" />
    </LinearLayout>

    <TextView
        android:id="@+id/score_tv"
        android:clickable="true"
        android:text="合格"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginRight="16dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />

</LinearLayout>