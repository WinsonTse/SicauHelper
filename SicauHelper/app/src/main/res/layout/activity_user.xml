<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:padding="16dp"
    android:background="@color/color_primary"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:id="@+id/user_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_head_iv"
            android:src="@drawable/ic_account_circle_white_48dp"
            android:layout_width="72dp"
            android:scaleType="centerCrop"
            android:layout_height="72dp"
            app:border_width="1dp"
            app:border_color="#ffffff" />

        <LinearLayout
            android:animateLayoutChanges="true"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#ffffff"
                android:paddingTop="4dp"
                android:id="@+id/user_name_tv"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textColor="#ffffff"
                android:id="@+id/user_school_tv"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/user_grade_tv"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

            <TextView
                android:layout_marginTop="32dp"
                android:visibility="invisible"
                android:textColor="@color/white_transparent"
                android:gravity="center"
                android:id="@+id/user_goods_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="商品数量"
                android:textSize="18sp" />


            <TextView
                android:visibility="invisible"
                android:textColor="@color/white_transparent"
                android:gravity="center"
                android:id="@+id/user_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="圈子数量"
                android:textSize="18sp" />
    <LinearLayout
        android:animateLayoutChanges="true"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:visibility="gone"
            android:id="@+id/edit_head_btn"
            android:background="@drawable/btn_white_lightgrey"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="修改头像"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="16dp"
            android:layout_height="1dp"/>
        <Button
            android:visibility="gone"
            android:id="@+id/edit_nickname_btn"
            android:background="@drawable/btn_white_lightgrey"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="修改昵称"
            android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>
